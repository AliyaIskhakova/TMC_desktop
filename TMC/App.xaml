<Application x:Class="TMC.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://metro.mahapps.com/winfx/xaml/controls"
             StartupUri="/View/Authorization.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <!-- Theme setting -->

                <!--<ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml" />-->
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}" x:Key="MainComboBox">
                <Setter Property="ui:ControlsHelper.CornerRadius" Value="5" />
                <Setter Property="ui:ControlsHelper.MouseOverBorderBrush" Value="#2747BB"/>
                <Setter Property="BorderBrush" Value="Gray" />
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="Margin" Value="0 5"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">

                <Setter Property="FontSize" Value="14"/>
            </Style>
            <Style TargetType="Label" x:Key="WindowTitle">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Margin" Value="25 20 20 10"/>
            </Style>

            <Style TargetType="Button" x:Key="MainBtn" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Margin" Value="30 5"/>
                <Setter Property="ui:ControlsHelper.CornerRadius" Value="5"/>
                <Setter Property="Background" Value="#2747BB"/>
                <Setter Property="FontFamily" Value="Inter"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="BorderBrush" Value="#2747BB"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" x:Key="InfoTxtBox">
                <Setter Property="Background" Value="White"/>
                <Setter Property="ui:ControlsHelper.CornerRadius" Value="5"/>
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="Margin" Value="0 5"/>
                <Setter Property="MaxLength" Value="100"/>
                <Setter Property="Validation.ErrorTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <!-- Пустой шаблон, чтобы не отображать встроенные ошибки -->
                            <AdornedElementPlaceholder />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="Validation.HasError" Value="True">
                        <Setter Property="Foreground" Value="Red" />
                        <Setter Property="BorderBrush" Value="Red"/>
                        <!--<Setter Property="ToolTip.Placement" Value="Bottom"/>
                        <Setter Property="ToolTip.Foreground" Value="Red"/>-->
                        <!--<Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>-->
                        
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" x:Key="SearchBox">
                <Style.Setters>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="ui:ControlsHelper.CornerRadius" Value="10"/>
                    <Setter Property="ui:ControlsHelper.MouseOverBorderBrush" Value="#FF2747BB"  />
                    <Setter Property="ui:ControlsHelper.FocusBorderBrush" Value="#FF2747BB"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                    <Setter Property="Margin" Value="20 0 10 0"/>
                    <Setter Property="MinWidth" Value="200"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="ui:TextBoxHelper.Watermark" Value="Поиск"/>
                </Style.Setters>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="Gray"/>
                    </Trigger>
                </Style.Triggers>

            </Style>

            <Style TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}" x:Key="PasswordBoxStyle" >
                <Setter Property="Background" Value="White"/>
                <Setter Property="ui:ControlsHelper.CornerRadius" Value="5"/>
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="MaxLength" Value="100"/>
                <Setter Property="Margin" Value="0 5"/>
            </Style>

            <Style TargetType="RadioButton">
                <Setter Property="BorderBrush" Value="#2747BB"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="10 0"/>

            </Style>
            <Style TargetType="ui:MetroHeader" >
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="5 0"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Foreground" Value="#1A2E76"/>
            </Style>
            <Style TargetType="DataGrid" BasedOn="{StaticResource MahApps.Styles.DataGrid}" x:Key="MainDataGrid">
                <Setter Property="ColumnWidth" Value="Auto"/>
                <Setter Property="Margin" Value="20"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="CanUserDeleteRows" Value="False"/>
                <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="Background" Value="#EEF1FF"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Width" Value="Auto"/>
            </Style>
            <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Width" Value="Auto"/>
                <!--<Setter Property="Background" Value="#EEF1FF"/>-->
                <Setter Property="BorderBrush" Value="#EEF1FF"/>
                <Setter Property="BorderThickness" Value=" 0 2"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="ErrorBlock">
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="Red"/>
                <Setter Property="Margin" Value="5 0 0 5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
