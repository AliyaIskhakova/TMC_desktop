<Window x:Class="TMC.View.RepairPartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMC.View"
        xmlns:ui="http://metro.mahapps.com/winfx/xaml/controls"
            WindowStyle="None"
                WindowStartupLocation="CenterScreen"

    Background="#E4E9FF"
    Name="window"
    mc:Ignorable="d"
    Title="ClientWindow" MinHeight="400" MinWidth="450">
      
    <DockPanel >
        <Border DockPanel.Dock="Top">
            <DockPanel >
                <Label Content="ЗИП" Margin="30 15 30 10" VerticalAlignment="Center" Style="{StaticResource WindowTitle}"/>
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Margin="10" Command="SystemCommands.CloseWindowCommand">
                    <Image Source="/Image/close.png" />
                </Button>
            </DockPanel>
        </Border>
        <StackPanel>
            <Border Padding="30 0">
                <StackPanel>
                    <TextBox ui:TextBoxHelper.Watermark="Фамилия" Style="{StaticResource InfoTxtBox}"/>
                    <TextBox ui:TextBoxHelper.Watermark="Имя" Style="{StaticResource InfoTxtBox}"/>
                    <TextBox ui:TextBoxHelper.Watermark="Отчество" Style="{StaticResource InfoTxtBox}"/>
                    <TextBox ui:TextBoxHelper.Watermark="Телефон" Style="{StaticResource InfoTxtBox}"/>
                    <TextBox ui:TextBoxHelper.Watermark="Почта" Style="{StaticResource InfoTxtBox}"/>
                    <TextBox x:Name="CompanyTxt" ui:TextBoxHelper.Watermark="Компания" Style="{StaticResource InfoTxtBox}" />
                </StackPanel>
            </Border>
            <Button Style="{StaticResource MainBtn}" Content="Сохранить" Margin="30 5" />
            <Button Content="Отменить" Style="{StaticResource CancelBtn}"  />
        </StackPanel>


    </DockPanel>
</Window>
