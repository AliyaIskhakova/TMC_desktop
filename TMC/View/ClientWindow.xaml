<Window x:Class="TMC.View.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMC.ViewModel"
        xmlns:ui="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#E4E9FF"
        Name="window"
        mc:Ignorable="d"
        Title="ClientWindow" MaxHeight="400" MaxWidth="450" MinHeight="370" MinWidth="400" >
    <Window.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="BorderBrush" Value="#2747BB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10 0"/>
        </Style>

    </Window.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Top">
            <DockPanel >
                <Label Content="Клиент" Margin="30 15 30 10" VerticalAlignment="Center" Style="{StaticResource WindowTitle}"/>
                <RadioButton x:Name="fiz" Content="Физ.лицо" />
                <RadioButton x:Name="ur" IsChecked="{Binding type}" Content="Юр.лицо" Checked="RadioButton_Checked" Unchecked="RadioButton_Unchecked"/>
                <Button Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Margin="10">
                    <Image Source="/Image/close.png" />
                </Button>
            </DockPanel>
        </Border>
        <StackPanel>
            <Border Padding="30 0">
                <StackPanel>
                    <TextBox Text="{Binding surname, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" ui:TextBoxHelper.Watermark="Фамилия*" Style="{StaticResource InfoTxtBox}" />
                    <TextBox Text="{Binding name,ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" ui:TextBoxHelper.Watermark="Имя*" Style="{StaticResource InfoTxtBox}"/>
                    <TextBox Text="{Binding patronymic, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" ui:TextBoxHelper.Watermark="Отчество" Style="{StaticResource InfoTxtBox}"/>
                    <toolkit:MaskedTextBox Mask="+7(000)000-00-00" Text="{Binding telephone, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" ui:TextBoxHelper.Watermark="Телефон*" Style="{StaticResource InfoTxtBox}" />
                    <TextBox Text="{Binding email, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"   ui:TextBoxHelper.Watermark="Почта" Style="{StaticResource InfoTxtBox}"/>
                    <TextBox Text="{Binding companyname, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Visibility="Collapsed" x:Name="CompanyTxt" ui:TextBoxHelper.Watermark="Компания*" Style="{StaticResource InfoTxtBox}"/>
                </StackPanel>
            </Border>
            <Button Style="{StaticResource MainBtn}" Content="Сохранить" IsDefault="True" Click="Accept_Click" Margin="30 5" />
            <Button Content="Отменить" Style="{StaticResource CancelBtn}"  />
        </StackPanel>
    </DockPanel>
</Window>
