<Window x:Class="TMC.View.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMC.View"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:ui="http://metro.mahapps.com/winfx/xaml/controls"      
        Background="#E4E9FF"
                WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        WindowStyle="None"
        Name="window"
        Title="EmployeeWindow" Height="550" Width="450">
    <DockPanel >
        <Border DockPanel.Dock="Top">
            <DockPanel >
                <Label Content="Сотрудник" Margin="30 15 30 10" VerticalAlignment="Center" Style="{StaticResource WindowTitle}"/>
                
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Margin="10" Click="Button_Click">
                    <Image Source="/Image/close.png" />
                </Button>
            </DockPanel>
        </Border>
        <StackPanel>
            <Border Padding="30 0">
                <StackPanel>
                    <ui:MetroHeader Content="Фамилия*"/>
                    <TextBox x:Name="SurnameTxt" Text="{Binding Surname}" ui:TextBoxHelper.Watermark="Фамилия" Style="{StaticResource InfoTxtBox}"/>
                    <ui:MetroHeader Content="Имя*"/>
                    <TextBox x:Name="NameTxt" Text="{Binding Name}" ui:TextBoxHelper.Watermark="Имя"  Style="{StaticResource InfoTxtBox}"/>
                    <ui:MetroHeader Content="Отчество"/>
                    <TextBox Text="{Binding Patronymic}" ui:TextBoxHelper.Watermark="Отчество" Style="{StaticResource InfoTxtBox}" />
                    <ui:MetroHeader Content="Телефон*"/>
                    <toolkit:MaskedTextBox x:Name="TelephoneTxt" Mask="+7(000)000-00-00" Text="{Binding Telephone, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" ui:TextBoxHelper.Watermark="Телефон*" Style="{StaticResource InfoTxtBox}" />
                    <ui:MetroHeader Content="Почта*"/>
                    <TextBox x:Name="EmailTxt" Text="{Binding Email}" ui:TextBoxHelper.Watermark="Почта" Style="{StaticResource InfoTxtBox}"/>
                    <ui:MetroHeader Content="Должность*"/>
                    <ComboBox x:Name="RoleBox" ui:ControlsHelper.CornerRadius="5" Background="White" Margin="0 5" BorderBrush="Gray" BorderThickness="1.5">
                        <ComboBox.Resources>
                            <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml" />
                        </ComboBox.Resources>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ui:MetroHeader Content="Логин*"/>
                    <TextBox x:Name="LoginTxt" Text="{Binding Login}" ui:TextBoxHelper.Watermark="Логин" Style="{StaticResource InfoTxtBox}"/>
                    <!--<ui:MetroHeader Content="Пароль*"/>
                    <TextBox x:Name="PasswordTxt" Text="{Binding Password}" ui:TextBoxHelper.Watermark="Пароль" Style="{StaticResource InfoTxtBox}" />-->
                </StackPanel>
            </Border>
            <Button x:Name="newPassword" Style="{StaticResource MainBtn}"  Command="{Binding NewPasswordCommand}" CommandParameter="{Binding ElementName=window}" Content="Отправить новый пароль" Background="#889DFB" Margin="30 5" />

            <Button Style="{StaticResource MainBtn}" Click="Accept_Click" Content="Сохранить" Margin="30 5" />
        </StackPanel>
    </DockPanel>
</Window>
