<Window x:Class="TMC.View.AddServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMC.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        x:Name="addService"
        Background="#E4E9FF"
        Title="AddServicesWindow" Height="400" Width="600">
    <DockPanel>
        <Label DockPanel.Dock="Top" Style="{StaticResource WindowTitle}" >Услуги</Label>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <TextBox x:Name="SearchServices" Style="{StaticResource SearchBox}" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Style="{StaticResource MainBtn}" Command="{Binding AddSelectedServicesCommand}" CommandParameter="{Binding ElementName=addService}" >Добавить к заявке</Button>
        </StackPanel>
        <DataGrid x:Name="ServicesDG"  SelectionMode="Extended" ItemsSource="{Binding ServicesList}" Margin="10,20,10,10" Style="{StaticResource MainDataGrid}" >
            <DataGrid.Resources>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml" />
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Cost}"/>
                <DataGridTextColumn Header="Гарантия" Binding="{Binding Warranty}"/>
                <!--<DataGridTemplateColumn Header="Количество">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="Count">1</TextBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>-->
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
