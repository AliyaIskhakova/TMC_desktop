<Window x:Class="TMC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMC.ViewModel"  
xmlns:ui="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Window.Resources>
                   
            <Style TargetType="Button" x:Key="MenuBtn">
                <Setter Property="Margin" Value="0 7 0 0"/>
                <Setter Property="Background" Value="{x:Null}"/>
                
            </Style>
            <Style TargetType="Image" x:Key="MenuImg">
                <Setter Property="Width" Value="30"/>
                <Setter Property="Margin" Value="10 0"/>
            </Style>
        <Style TargetType="Button" x:Key="Filter">
            <Style.Setters>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderThickness" Value="0 0 0 0"/>
                <Setter Property="Padding" Value="20 0"/>
                <Setter Property="Margin" Value="5 10"/>
            </Style.Setters>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Click">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation Storyboard.TargetProperty="BorderThickness" Duration="0:0:1" To="0 0 0 3" AutoReverse="False"  />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Background="#CFD9FF"  >
            <Ellipse DockPanel.Dock="Top" Width="100" Height="100" Margin="0 15">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Image/Y_MSHrGBV5U.jpg" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>

            <Button x:Uid="0" DockPanel.Dock="Bottom" Click="Button_Click" Style="{StaticResource MenuBtn}">
                <Button.Template>
                    <ControlTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Image/exit.png" Style="{StaticResource MenuImg}" />
                            <Label>Выйти</Label>
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel DockPanel.Dock="Top">
                <Button x:Name="RequestBtn" x:Uid="1" Click="Button_Click" Style="{StaticResource MenuBtn}">
                    <Button.Template>
                        <ControlTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Image/request.png" Style="{StaticResource MenuImg}" />
                                <Label>Заявки</Label>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="StoreBtn" x:Uid="2" Click="Button_Click"  Style="{StaticResource MenuBtn}">
                    <Button.Template>
                        <ControlTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image  Source="/Image/Store.png" Style="{StaticResource MenuImg}" />
                                <Label>Склад ЗИП</Label>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="ClientsBtn" Uid="3" Click="Button_Click" Style="{StaticResource MenuBtn}">
                    <Button.Template>
                        <ControlTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Image/Clients.png" Style="{StaticResource MenuImg}"/>
                                <Label>Клиенты</Label>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="ServicesBtn" x:Uid="4" Click="Button_Click" Style="{StaticResource MenuBtn}">
                    <Button.Template>
                        <ControlTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Image/repair.png" Style="{StaticResource MenuImg}"/>
                                <Label>Услуги</Label>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="EmployeesBtn" x:Uid="5" Click="Button_Click" Style="{StaticResource MenuBtn}">
                    <Button.Template>
                        <ControlTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Image/employee.png" Style="{StaticResource MenuImg}" />
                                <Label>Сотрудники</Label>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="ResultsBtn" x:Uid="6" Click="Button_Click" Style="{StaticResource MenuBtn}">
                    <Button.Template>
                        <ControlTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Image/employee.png" Style="{StaticResource MenuImg}" />
                                <Label>Отчёты</Label>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
           
        </DockPanel>
        <Grid x:Name="RequestsWindow" Grid.Column="1" Visibility="Collapsed">
            <DockPanel>
                <Label DockPanel.Dock="Top" Style="{StaticResource WindowTitle}" >Заявки</Label>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <TextBox x:Name="SearchRequest" BorderThickness="1" Margin="20 0 10 0"  BorderBrush="Gray" MinWidth="200" ui:TextBoxHelper.Watermark="Поиск" ui:ControlsHelper.CornerRadius="10"></TextBox>
                    <Button x:Name="FilterBtn" Style="{StaticResource mainBtn}" >Фильтр</Button>
                    <Button x:Name="AddRequest" Style="{StaticResource mainBtn}">+ Добавить заявку</Button>
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20 0 ">
                        <Button Style="{StaticResource Filter}"  Content="Все"/>
                        <Button Style="{StaticResource Filter}" Content="Новые" />
                        <Button Style="{StaticResource Filter}" Content="В работе" />
                        <Button Style="{StaticResource Filter}" Content="Ожидание ЗИП" />
                        <Button Style="{StaticResource Filter}" Content="Готовые" />
                        <Button Style="{StaticResource Filter}" Content="Отменены" />
                    </StackPanel>
                    <DataGrid x:Name="RequestDG" Margin="10,20,10,0"
                  AutoGenerateColumns="True" Style="{StaticResource MahApps.Styles.DataGrid.Azure}" >

                    </DataGrid>
                </StackPanel>
            </DockPanel>
        </Grid>
        <Grid x:Name="StoreWindow" Visibility="Collapsed" Grid.Column="1">
            <DockPanel>
                <Label DockPanel.Dock="Top" Style="{StaticResource WindowTitle}" >Склад ЗИП</Label>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <TextBox x:Name="SearchParts" BorderThickness="1" Margin="20 0 10 0"  BorderBrush="Gray" MinWidth="200" ui:TextBoxHelper.Watermark="Поиск" ui:ControlsHelper.CornerRadius="10"></TextBox>
                    <Button x:Name="AddReraipPart" Style="{StaticResource mainBtn}">+ Добавить </Button>
                </StackPanel>
                <StackPanel>
                    <DataGrid x:Name="StoreDG" Margin="10,20,10,0" Style="{StaticResource MahApps.Styles.DataGrid.Azure}" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID"/>
                            <DataGridTextColumn Header="Название"/>
                            <DataGridTextColumn Header="Количество"/>
                            <DataGridTextColumn Header="Цена"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </DockPanel>
        </Grid>
        <Grid x:Name="ClientsWindow" Visibility="Collapsed" Grid.Column="1">
            <DockPanel>
                <Label DockPanel.Dock="Top" Style="{StaticResource WindowTitle}" >Клиенты</Label>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <TextBox x:Name="SearchClient" BorderThickness="1" Margin="20 0 10 0"  BorderBrush="Gray" MinWidth="200" ui:TextBoxHelper.Watermark="Поиск" ui:ControlsHelper.CornerRadius="10"></TextBox>
                    <Button x:Name="AddClient" Style="{StaticResource mainBtn}">+ Добавить</Button>
                </StackPanel>
                <StackPanel>
                    <DataGrid x:Name="ClientsDG" Margin="10,20,10,0" Style="{StaticResource MahApps.Styles.DataGrid.Azure}" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя"/>
                            <DataGridTextColumn Header="Телефон"/>
                            <DataGridTextColumn Header="Тип"/>
                            <DataGridTextColumn Header="Почта"/>
                            <DataGridTextColumn Header="Компания"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </DockPanel>
        </Grid>
        <Grid x:Name="ServicesWindow" Visibility="Collapsed"  Grid.Column="1">
            <DockPanel>
                <Label DockPanel.Dock="Top" Style="{StaticResource WindowTitle}" >Услуги</Label>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <TextBox x:Name="SearchServices" BorderThickness="1" Margin="20 0 10 0"  BorderBrush="Gray" MinWidth="200" ui:TextBoxHelper.Watermark="Поиск" ui:ControlsHelper.CornerRadius="10"></TextBox>
                    <Button x:Name="FilterServiceBtn" Style="{StaticResource mainBtn}" >Фильтр</Button>
                    <Button x:Name="PrintPriceList" Style="{StaticResource mainBtn}">Печать</Button>
                </StackPanel>
                <StackPanel>
                    <DataGrid x:Name="ServicesDG" Margin="10,20,10,0" Style="{StaticResource MahApps.Styles.DataGrid.Azure}" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название"/>
                            <DataGridTextColumn Header="Тип"/>
                            <DataGridTextColumn Header="Тип"/>
                            <DataGridTextColumn Header="Почта"/>
                            <DataGridTextColumn Header="Компания"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </DockPanel>
        </Grid>
        <Grid x:Name="EmployeesWindow"  Grid.Column="1">
            <Grid.DataContext>
                <local:EmployeesViewModel/>
            </Grid.DataContext>
            <DockPanel>
                <Label DockPanel.Dock="Top" Style="{StaticResource WindowTitle}" >Сотрудники</Label>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <TextBox x:Name="SearchEmployee" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"  BorderThickness="1" Margin="20 0 10 0"  BorderBrush="Gray" MinWidth="400"  ui:TextBoxHelper.Watermark="Поиск" ui:ControlsHelper.CornerRadius="10"></TextBox>
                    <Button x:Name="AddEmployee" Visibility="Collapsed" Style="{StaticResource mainBtn}">+ Добавить</Button>
                </StackPanel>
                <StackPanel>
                    <DataGrid x:Name="EmployeesDG" Margin="10,20,10,0" ItemsSource="{Binding EmployeesList}" Style="{StaticResource MahApps.Styles.DataGrid.Azure}" AutoGenerateColumns="False" ColumnWidth="*" >
                        <DataGrid.Columns >
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Отчество" Binding="{Binding Patronymic}"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Telephone}"/>
                            <DataGridTextColumn Header="Должность" Binding="{Binding Role}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </DockPanel>
        </Grid>
        <Grid x:Name="ResultsWindow" Visibility="Collapsed"  Grid.Column="1">
            
        </Grid>
    </Grid>
</Window>
